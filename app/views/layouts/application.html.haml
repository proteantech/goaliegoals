%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : 'GoalieGoals - Simple and Effective Goal Management'
      %meta{:content => content_for?(:description) ? yield(:description) : 'Free cloud based software used to manage, track, and monitor progress of personal goals. Goals are entered using a strict format to guarantee they are specific, measurable, actionable and time-bound.', :name => 'description'}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
        -if Rails.env.production?
          = javascript_include_tag "analytics"
  %body{:class => "#{controller_name} #{action_name}"}
    .full-width-wrapper.navbar-inner
      .navbar
        %nav.navbar-inner
          = render 'layouts/navigation'
    #main{:role => "main"}
      .padded-sides
        .framer
          .container
            .row
              .span12
                = render 'layouts/messages'
                = yield
              %footer
